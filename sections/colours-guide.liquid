{%- assign el_id = 'colours-guide-' | append: section.id -%}
{%- render 'section-padding', el_id: el_id, section: section -%}
{%- assign colors = section.blocks | where: 'type', 'color' -%}
{%- assign infos = section.blocks | where: 'type', 'info' -%}
{%- assign icons = section.blocks | where: 'type', 'icon' -%}
{%- render 'colours-guide',
    el_id: el_id,
    background: section.settings.bg_color,
    heading: section.settings.heading,
	heading_size: section.settings.heading_size,
    heading_desc: section.settings.heading_desc,
	heading_label: section.settings.heading_label,
	heading_url: section.settings.heading_url,
    title: section.settings.title,
    label1: section.settings.label1,
    text1: section.settings.text1,
    label2: section.settings.label2,
    text2: section.settings.text2,
    label3: section.settings.label3,
    text3: section.settings.text3,
    label4: section.settings.label4,
    text4: section.settings.text4,
    colors: colors,
    infos: infos,
    icons: icons
-%}

